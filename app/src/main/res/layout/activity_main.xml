<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="ExtraText">

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBlue"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/darkblue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/avatar"
            android:scaleType="centerCrop"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="ContentDescription"
            android:padding="2dp"/>

        <TextView
            android:id="@+id/tvGreeting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hi, Amin ðŸ‘‹\nWelcome back!"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:lineSpacingExtra="2dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/imgProfile"
            app:layout_constraintTop_toTopOf="@id/imgProfile"
            app:layout_constraintBottom_toBottomOf="@id/imgProfile"
            android:layout_marginStart="6dp"
            android:ellipsize="none"
            android:gravity="start"
            android:paddingEnd="16dp"/>

        <TextView
            android:id="@+id/box1"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:background="@drawable/rounded_box"
            android:text="ðŸš˜ \n 2300 \n Total Vehicles"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/box2"
            app:layout_constraintTop_toBottomOf="@id/imgProfile"
            android:layout_marginTop="16dp"
            app:layout_constraintWidth_percent="0.48"/>

        <TextView
            android:id="@+id/box2"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:background="@drawable/rounded_box_sec"
            android:text="âš¡ï¸ \n 2300 \n Total EV"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/box1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgProfile"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintWidth_percent="0.48"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/topBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Model & Brand -->
        <TextView
            android:id="@+id/tvHeaderBrandModel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Model"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvHeaderNumber"
            app:layout_constraintWidth_percent="0.3"/>

        <!-- Vehicle Number -->
        <TextView
            android:id="@+id/tvHeaderNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Vehicle Number"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="left"
            app:layout_constraintStart_toEndOf="@id/tvHeaderBrandModel"
            app:layout_constraintEnd_toStartOf="@id/tvHeaderFuel"
            app:layout_constraintWidth_percent="0.2"/>

        <!-- Fuel Type -->
        <TextView
            android:id="@+id/tvHeaderFuel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fuel Type"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="left"
            app:layout_constraintStart_toEndOf="@id/tvHeaderNumber"
            app:layout_constraintEnd_toStartOf="@id/tvHeaderYOE"
            app:layout_constraintWidth_percent="0.2"/>

        <!-- YOE -->
        <TextView
            android:id="@+id/tvHeaderYOE"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Year Of Purchase"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/tvHeaderFuel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvVehicles"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="8dp"

        app:layout_constraintTop_toBottomOf="@id/headerRow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_vehicle" />

    <Button
        android:id="@+id/btnAddVehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" + Add Vehicle"
        android:textColor="@color/white"
        android:background="@drawable/add_vehicle_button"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
